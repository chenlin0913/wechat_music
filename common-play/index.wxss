/* common-play/index.wxss */

.comm-play-view {
  width: 100%;
  height: 142rpx;
  background: linear-gradient(144deg, rgba(221, 19, 127, 0.7) 0%, rgba(81, 0, 77, 0.7) 100%);
  opacity: 1;
  position: fixed;
  bottom: 170rpx;
  left: 0;
  right: 0;
}

.play-view {
  height: 142rpx;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
}

.music-logo {
  width: 86rpx;
  height: 86rpx;
  background: rgba(109, 109, 109, 1);
  border-radius: 50%;
  opacity: 1;
  object-fit: cover;
  float: left;
}

.music-name {
  font-size: 32rpx;
  font-family: Roboto-Medium;
  color: rgba(238, 238, 238, 1);
  margin-left: 32rpx;
  margin-right: 32rpx;
  float: left;
  width: 290rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.music-top, .music-next {
  width: 28rpx;
  height: 28rpx;
  float: left;
}

.music-play {
  width: 62rpx;
  height: 62rpx;
  float: left;
  margin: 0rpx 60rpx;
}
.music-plays{
  width: 60rpx;
  height: 60rpx;
}
