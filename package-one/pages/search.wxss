/* package-one/pages/search.wxss */

.search-list-view {
  height: 114rpx;
  margin-top: 42rpx;
  display: flex;
  align-items: center;
}

.search-right-view {
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.7);
  float: left;
  width: 81%;
}

.search-right-view .top {
  font-size: 32rpx;
  font-family: Roboto-Medium;
  color: rgba(238, 238, 238, 1);
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-right-view .bom {
  font-size: 24rpx;
  font-family: Roboto-Regular;
  color: rgba(129, 122, 122, 1);
  text-align: left;
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search-right-view .bom label{
  float: left;
}
.img-view {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
  margin-right: 32rpx;
  float: left;
  background: rgba(109, 109, 109, 1);
}

.img-view image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
}

.index-placeholder-class {
  color: rgba(122, 124, 129, 1);
  font-size: 26rpx;
  font-family: Roboto-Regular;
}

.input-search-view {
  height: 70rpx;
  margin-top: 60rpx;
}

.index-search-input {
  background: rgba(54, 57, 66, 1);
  border: 2rpx solid rgba(54, 57, 66, 1);
  width: 84%;
  float: left;
  padding-left: 60rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 26rpx;
  font-family: Roboto-Regular;
  border-radius: 8rpx;
  position: relative;
  height: 70rpx;
  margin-left: 30rpx;
}

.index-search-input::before {
  content: " ";
  position: absolute;
  left: 20rpx;
  top: 19rpx;
  right: 0;
  background: url('data:image/png;base64,') no-repeat center;
  width: 34rpx;
  height: 34rpx;
}
